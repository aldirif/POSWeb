@model IEnumerable<POS_Web.DataContext.CategoryEntity>

@{
    ViewBag.Title = "Category";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Category</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Category" asp-action="Add">New Category</a>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CategoryCode</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
