@model IEnumerable<POS_Web.DataContext.EmployeeEntity>

@{
    ViewBag.Title = "Employee";
    Layout = "_Layout";
}

<div class="card-header">
    <h3>Employee</h3>
</div>
<div class="card-body">
    <div class="table-responsive">
        <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Employee" asp-action="Add">New Employee</a>
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Position</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Gender</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.Position</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
