@model POS_Web.DataContext.AbsensiEntity

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit Absensi</h2>
<form asp-controller="Absensi" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <input asp-for="EmployeeId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AbsenStartDate"></label>
        <input asp-for="AbsenStartDate" class="form-control" />
    </div>

     <div class="form-group">
        <label asp-for="AbsenEndDate"></label>
        <input asp-for="AbsenEndDate" class="form-control" />
    </div>

     <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-footer">
        <button type="submit" class="btn btn-warning">Update</button>
    </div>
</form>